<div class="container">

    <div class="row">
        <h2 class="favoritas">⭐⭐ Mis cafeterías favoritas ⭐⭐</h2>
        {{#each data}}
        <div class="col-md-3">
            <div class="card">
                <img src="{{image}}" class="card-img-top" alt="Cafeteria">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <div class="rating" data-rating={{rating}}></div>
                </div>
                <a href="/details/{{_id}}/cafeteria" class="btn">Ver cafetería</a>
            </div>
        </div>
        {{/each}}

    </div>
</div>
</div>

</div>
<script src="/js/rating.js"></script>